<div class="container-fluid p-4">
  <h1>Confirm Deletion</h1>

  <div class="card p-4">
    <p><strong>Name:</strong> <%= @reservation.name %></p>
    <p><strong>Phone Number:</strong> <%= @reservation.phone_number %></p>
    <p><strong>Reservation Date:</strong> <%= @reservation.reservation_date.strftime("%B %d, %Y at %I:%M %p") %></p>

    <p class="alert alert-danger mt-3">Are you sure you want to delete this reservation?</p>

    <div class="d-flex justify-content-between mt-3">
      <%= button_to 'Delete', reservation_path(@reservation), method: :delete, data: { confirm: 'Are you sure you want to delete this reservation?' }, class: 'btn btn-danger' %>
      <%= link_to 'Cancel', reservations_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
