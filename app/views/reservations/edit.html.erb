<div class="container-fluid p-4">
  <h1><%= action_name.capitalize %> Reservation</h1>

  <div class="card p-4">
    <%= form_with(model: @reservation, class: 'form') do |form| %>
      <div class="mb-3">
        <%= form.label :name, class: 'form-label' %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= form.label :phone_number, class: 'form-label' %>
        <%= form.text_field :phone_number, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= form.label :reservation_date, class: 'form-label' %>
        <%= form.datetime_select :reservation_date, class: 'form-control' %>
      </div>

      <div class="d-flex justify-content-between">
        <%= form.submit 'Save Reservation', class: 'btn btn-primary' %>
        <%= link_to 'Back', reservations_path, class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
