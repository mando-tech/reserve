<div class="container-fluid p-4">
  <h1>Reservation Details</h1>

  <div class="card p-4">
    <p><strong>Name:</strong> <%= @reservation.name %></p>
    <p><strong>Phone Number:</strong> <%= @reservation.phone_number %></p>
    <p><strong>Reservation Date:</strong> <%= @reservation.reservation_date.strftime("%B %d, %Y at %I:%M %p") %></p>

    <div class="d-flex justify-content-between mt-3">
      <%= link_to 'Edit', edit_reservation_path(@reservation), class: 'btn btn-warning' %>
      <%= link_to 'Back', reservations_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
